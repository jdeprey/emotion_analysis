{
  "manifest_version": 2,

  "name": "Feels Like",
  "description": "Performs Emotion Analysis on text content of current page",
  "version": "2.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Feels"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  "background": {
    "scripts": [
    "js/popup.js"]
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}